<% unless logged_in? %>
  <%= link_to scrivito_path(LoginPage.instance), class: 'navbar-btn navbar-right' do %>
    <button class="btn btn-success">Log in</button>
  <% end %>
<% else %>
  <%= link_to session_path, class: 'navbar-btn navbar-right', method: :delete do %>
    <button class="btn btn-warning">Log out</button>
  <% end %>
<% end %>

<div class ="row">
  <div class="col-lg-12">
    <h1 class="page-header">「Scratchでつくる! たのしむ! プログラミング道場」Webコンテンツ</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= image_tag "sotechsha-1_book-cover.png", class: "img-responsive center-block",
                                       style: "width: 90%" %>
  </div>
  <div class="col-md-6">
    <% @sts_posts.each do |sts_post| %>
    <h3><%= link_to(scrivito_value(sts_post.title), scrivito_path(sts_post)) %></h3>
    <%= content_tag(:p, truncate(scrivito_value(sts_post.abstract),
                    :length => 250, :escape => false)) %>
    <%= link_to("もっと見る", scrivito_path(sts_post), :class => "btn btn-warning btn-block") %>
    <hr>
    <% end %>
  </div>
</div>

<%= link_to("previous page", @previous_page) if @previous_page %>
<%= link_to("next page", @next_page) if @next_page %>
